<div class="navbar"><h1>Restaurants</h1>
<%= link_to 'Add a restaurant', new_restaurant_path, class: "btn btn-primary"%>
</div>
<% @restaurants.each do |restaurant| %>
  <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
  <p><%= restaurant.category.capitalize %> |
  <%= restaurant.address %> |
  <%= restaurant.phone_number %></p>
<% end %>
