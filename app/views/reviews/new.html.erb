<h1>New Review</h1>

<%= simple_form_for [@restaurant, @review], html: { class: 'mt-5' } do |form| %>
  <%= form.input :rating, as: :numeric %>
  <%= form.input :content %>
  <%= form.submit 'Submit Review', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
